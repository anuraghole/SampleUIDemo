<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="SuperTheme">

    </style>

    <style name="SuperTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/appBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/appBackground</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">#0cf727</item>
        <item name="colorControlActivated">@color/appBackground</item>
        <item name="colorControlNormal">#0cf727</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.TextView" />

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="AppTheme.GreenRipple">
        <item name="colorControlHighlight">#0cf727</item>
    </style>

    <style name="TextView.Head" parent="android:Theme">
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:text">Text Head</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">@dimen/text_size_head</item>
        <item name="android:textColor">@color/textViewColor</item>
    </style>
    <style name="TextView.Normal" parent="android:Theme">
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:text">Text Normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/textViewColor</item>
    </style>
    <style name="TextView.Small" parent="android:Theme">
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:text">Text Small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/textViewColor</item>
    </style>


    <style name="AppTheme.EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="AppTheme.spinnerStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/minWidthButton</item>
        <item name="android:minHeight">@dimen/minHeightButton </item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/iconsBorder</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabPaddingEnd">3dp</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
        <item name="tabTextColor">@android:color/black</item>
        <item name="tabTextAppearance">@style/TextView.Normal</item>
    </style>
    <!--
    <style name="AppTheme.ImageView" parent="AppTheme.ImageView"  >
            <item name="android:src">@drawable/ic_menu_camera</item>
            <item name="android:scaleType">fitXY</item>
            <item name="android:layout_margin">1dp</item>

        </style>
    -->

</resources>
